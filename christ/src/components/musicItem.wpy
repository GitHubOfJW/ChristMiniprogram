<template>
  <view class="music {{ music_id === music.id ? 'checked' : '' }}">
    <view class="numb">
    <image wx:if="{{ music_id === music.id }}" src="../static/imgs/current.svg" model="aspectFill" /> 
    <label wx:if="{{ music_id !== music.id }}">{{music.num}} .</label>
    </view>
    <view class="info" @tap="clickMusic">
      <label>{{music.name}}</label>
    </view>
    <view class="action">
        <image wx:if="{{  infoScope && music.favorite && !music.favorite.is_delete }}" @tap.stop="unsupportHandler" src="../static/imgs/unsupport.png" model="aspectFit" />
        <image wx:if="{{ infoScope && (!music.favorite || music.favorite.is_delete) }}" @tap.stop="supportHandler" src="../static/imgs/support.png" model="aspectFit" />
        <button wx:if="{{!infoScope}}" plain size="mini" open-type="getUserInfo"  bindgetuserinfo="bindGetUserInfo">
          <image wx:if="{{ music.favorite && !music.favorite.is_delete }}" src="../static/imgs/unsupport.png" model="aspectFit" />
          <image wx:if="{{ !music.favorite || music.favorite.is_delete }}" src="../static/imgs/support.png" model="aspectFit" />
        </button>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
import { connect } from 'wepy-redux'

@connect({
  music_id(state) {
    return state.musicPlayer.music_id
  },
  paused(state) {
    return !state.musicPlayer.isPlaying
  },
  favorite(state) {
    return state.musicPlayer.favorite
  }
})

export default class MusicItem extends wepy.component {
  props = {
    music: {
      type: Object,
      default: {
        name: '歌曲名称'
      }
    }
  }

  data = {
    infoScope: false
  }

  onLoad() {
    this.infoScope = this.$parent.$parent.globalData.infoScope
  }

  methods = {
    clickMusic() {
      this.$emit('choose_music', this.music)
    },
    unsupportHandler() {
      this.$emit('favorite', {
        music_id: this.music.id,
        favorite: false
      })
    },
    supportHandler() {
      this.$emit('favorite', {
        music_id: this.music.id,
        favorite: true
      })
    },
    bindGetUserInfo(e) {
      if (!e.detail.userInfo) {
        return
      }
      this.infoScope = true
      this.$parent.$parent.setUserInfo(e.detail.userInfo)
    }
  }

  computed = {
  }
}
</script>

